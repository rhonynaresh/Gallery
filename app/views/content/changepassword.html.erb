<div class="container">
	<div class="offset4"><img src="/assets/parabola-logo.png" class="img-polaroid"></div>
	<div class="offset4"><h3>Parabola Social Network</h3></div>
</br></br></br></br>
	
	<%= form_tag :action => 'changepassword' do %>
		<div class="row">
			<div class="span3 offset3"><%= label_tag 'Old Password' %></div>
			<%= password_field_tag 'Old_Password' %>
		</div>
		<div class="row">
			<div class="span3 offset3"><%= label_tag 'New Password' %></div>
			<%= password_field_tag 'New_Password' %>
		</div>
		<div class="row">
			<div class="span3 offset3"><%= label_tag 'Re-type New Password' %></div>
			<%= password_field_tag 'Re_Password' %>
		</div>
		</br>
		<div class="row">
			<div class="span4 offset6"><%= submit_tag 'Save' %><%= submit_tag 'Cancel' %></div>
		</div>
	<% end %>
</div>
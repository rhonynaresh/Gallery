<div class="container">
	<div class="offset4"><img src="/assets/parabola-logo.png" class="img-polaroid"></div>
	<div class="offset4"><h3>Parabola Social Network</h3></div>
</br></br></br></br>
	
	<%= form_tag :action => "home" do %>
		<div class="row">
			<div class="span2 offset3"><%= label_tag 'User Name' %></div>
			<%= text_field_tag 'User_Name' %>
		</div>
		<div class="row">
			<div class="span2 offset3"><%= label_tag 'Password' %></div>
			<%= password_field_tag 'Password' %>
		</div>
		<div class="row">
			<div class="span3 offset5"><p>New User? <%= link_to "Click Here", signup_path %></p></div>
			<div class="span3 offset5"> <%= link_to "Forgot Password", forgotpassword_path %></div>
		</div>
		</br>
		<div class="row">
			<div class="span3 offset5"><%= submit_tag 'Signin' %></div>
		</div>
	<% end %>
</div>